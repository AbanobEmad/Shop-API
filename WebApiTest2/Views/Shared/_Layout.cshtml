    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .tablink {
            background-color: #555;
            color: white;
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            font-size: 17px;
            width: 20%;
        }

            .tablink:hover {
                background-color: #777;
            }

        /* Style the tab content */
        .tabcontent {
            color: white;
            display: none;
            padding: 30px;
            text-align: center;
        }

        #London {
            background-color: red;
        }

        #Paris {
            background-color: green;
        }

        #Tokyo {
            background-color: blue;
        }

        #Oslo {
            background-color: orange;
        }
    </style>
</head>
<body>
    
    <button class="tablink" onclick="openCity('London', this, 'red')" id="defaultOpen">@Html.ActionLink("Category", "Home", "CategoryView")</button>
