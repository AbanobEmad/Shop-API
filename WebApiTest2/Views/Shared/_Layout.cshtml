    <button class="tablink" onclick="openCity('Tokyo', this, 'blue')">@Html.ActionLink("Order", "Home", "OrderView")</button>
    <button class="tablink" onclick="openCity('Oslo', this, 'orange')">@Html.ActionLink("Product", "Home", "ProductView")</button>
