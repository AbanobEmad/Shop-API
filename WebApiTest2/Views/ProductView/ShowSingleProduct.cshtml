@using WebApiTest2.Models
@model Data_Show_Product
@{
    ViewBag.Title = "ShowSingleProduct";
}
<style>
    table, td, th {
        border: 1px solid black;
        align-content: center;
        padding: 10px 15px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th {
        background-color: aquamarine;
        font-size: 20px;
        font-weight: bold;
    }

    tr:nth-of-type(odd) {
        background-color: #ccc;
    }
</style>
<h2>ShowSingleProduct</h2>

<form action="/ProductView/SaveEdit/@Model.ID" method="get">
    <div style="display: inline-block;float: left;width: 500px;padding: 10px">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" name="Name" id="Name" value="@Model.Name" />
            <p></p>
            <p></p>
        </div>
        <div class="form-group">
            @Html.LabelFor(P => P.Description)
            @Html.TextAreaFor(P => P.Description, new { @class = "form-control", @style = "width: 350px; height:150px" })
            <p></p>
            <p></p>
        </div>
        <div class="form-group">
            <label for="Seller_Name">Seller_Name</label>
            <input type="text" class="form-control" name="Category_ID" id="Seller_Name" value="@Model.Seller_Name" readonly />
            <p></p>
            <p></p>
        </div>
        <div class="form-group">
            <label for="Category_ID">Category_ID</label>
            <input type="text" class="form-control" name="Category_ID" id="Category_ID" value="@Model.Cate_Name" readonly />
            <p></p>
            <p></p>
        </div>
    </div>
    <div>
        <div class="form-group">
            <label for="Price">Price</label>
            <input type="text" class="form-control" name="Price" id="Price" value="@Model.Price" />
            <p></p>
            <p></p>
        </div>
        <div class="form-group">
            <label for="Discount">Discount</label>
            <input type="text" class="form-control" name="Discount" id="Discount" value="@Model.Discount" />
            <p></p>
            <p></p>
        </div>
        <div class="form-group">
            <label for="percent">percent</label>
            <input type="text" class="form-control" name="percent" id="percent" value="@Model.percent" />
            <p></p>
            <p></p>
        </div>
        <div class="form-group">
            <label for="Shipping">Shipping</label>
            <input type="text" class="form-control" name="Shipping" id="Shipping" value="@Model.Shipping" />
            <p></p>
            <p></p>
        </div>
        <div class="form-group">

            @Html.CheckBoxFor(x => x.Offer, Model.Offer)
            <label for="Offer">Offer</label>
            <p></p>
            <p></p>
        </div>
        <div class="form-group">

            @Html.CheckBoxFor(x => x.Approval, Model.Approval)
            <label for="Approval">Approval</label>
            <p></p>
            <p></p>
        </div>
        <div class="form-group">

            @Html.CheckBoxFor(x => x.Show_Home, Model.Show_Home)
            <label for="Show_Home">Show_Home</label>
            <p></p>
            <p></p>
        </div>
    </div>

    </div>
    <div style="padding: 20px; margin:20px">
        @foreach (var item in Model.LinkIamge)
        {
            <img src=@item width="200" height="200"  />
        }

        <p></p>
        <p></p>
    </div>

    <table width="90%" style="margin:50px;padding:50px">
        <tr>
            <th class="text-center">Size</th>
            <th class="text-center">Max Count</th>
            <th class="text-center">Edit Size</th>
            <th class="text-center">delete Size</th>
        </tr>

        @foreach (var item in @ViewBag.sizeNames)
        {
            <tr>
                <td align="center">@item.Name</td>
                <td align="center">@item.MaxCount</td>
                <td align="center">@Html.ActionLink("Edit", "Size_Edit", new { id = item.id })</td>
                <td align="center">@Html.ActionLink("Delete Size", "Delete_Size", new { id = item.id })</td>
            </tr>
        }

    </table>
    <div class="text-center">
        <input type="submit" value="Save Edit" class="btn btn-success" />
        @Html.ActionLink("Add Size", "AddSizeFromProduct",new { id=Model.ID}, new { @class = "btn btn-success",@style ="margin:50px;"})
    </div>
</form>