@using WebApiTest2.Models
@model CatogoryData
@{
    ViewBag.Title = "ShowSingleCate";
}

<h2>ShowSingleCate</h2>

@using (Html.BeginForm("SaveEdit", "CategoryView",new { id= @ViewBag.id}, FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="form-group">
        @Html.LabelFor(C => C.Cat_Name_AR)
        @Html.TextBoxFor(C => C.Cat_Name_AR, new { @class = "form-control" })
        <p></p>
        <p></p>
    </div>

    <div class="form-group">
        @Html.LabelFor(C => C.Cat_Name_En)
        @Html.TextBoxFor(C => C.Cat_Name_En, new { @class = "form-control" })
        <p></p>
        <p></p>
    </div>
    <div>
        <p><input type="file" accept="image/*" name="file" id="file" onchange="loadFile(event)"></p>
        <p><img id="output" width="200" src="@Model.Image_Path"/></p>
        <p>@Html.LabelFor(C => C.file)</p>
        <p></p>
        <p></p>
    </div>
    <div>
        @Html.CheckBoxFor(C => C.Home_Show)
        @Html.Label("Appear The Category in Home Page ")
        <p></p>
        <p></p>
    </div>
    <input type="submit" value="Create" class="btn btn-success" />
}
<script>
        var loadFile = function (event) {
    var image = document.getElementById('output');
    image.src = URL.createObjectURL(event.target.files[0]);
};
</script>